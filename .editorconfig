# editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab
indent_size = 4

[*.{html,css,js,vue,jsx,ts,tsx}]
indent_size = 2

[*.{yaml,yml,json,xml}]
indent_size = 2
